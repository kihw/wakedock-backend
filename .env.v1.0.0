# WakeDock v1.0.0 Configuration File
# Advanced Service & Container Orchestration Platform

# Application Settings
WAKEDOCK_VERSION=1.0.0
WAKEDOCK_ENVIRONMENT=production
WAKEDOCK_DEBUG=false
WAKEDOCK_LOG_LEVEL=INFO
WAKEDOCK_SECRET_KEY=your-secret-key-here
WAKEDOCK_CORS_ORIGINS=["http://localhost:3000", "https://wakedock.local"]
WAKEDOCK_ALLOWED_HOSTS=["localhost", "wakedock.local", "127.0.0.1"]

# Database Configuration
DATABASE_URL=postgresql://wakedock_user:wakedock_password@localhost:5432/wakedock_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600
DATABASE_ECHO=false

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_KEEPALIVE=true
REDIS_HEALTH_CHECK_INTERVAL=30

# Docker Configuration
DOCKER_HOST=unix:///var/run/docker.sock
DOCKER_TLS_VERIFY=false
DOCKER_CERT_PATH=
DOCKER_MACHINE_NAME=
DOCKER_API_VERSION=auto
DOCKER_TIMEOUT=60
DOCKER_REGISTRY_URL=
DOCKER_REGISTRY_USERNAME=
DOCKER_REGISTRY_PASSWORD=
DOCKER_REGISTRY_EMAIL=

# GitHub Integration
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_WEBHOOK_SECRET=your-webhook-secret
GITHUB_APP_ID=
GITHUB_PRIVATE_KEY_PATH=
GITHUB_INSTALLATION_ID=
GITHUB_API_BASE_URL=https://api.github.com
GITHUB_OAUTH_CALLBACK_URL=http://localhost:3000/auth/github/callback

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
JWT_ISSUER=wakedock
JWT_AUDIENCE=wakedock-users

# Security Settings
SECURITY_PASSWORD_MIN_LENGTH=8
SECURITY_REQUIRE_SPECIAL_CHARS=true
SECURITY_REQUIRE_NUMBERS=true
SECURITY_REQUIRE_UPPERCASE=true
SECURITY_MAX_LOGIN_ATTEMPTS=5
SECURITY_LOCKOUT_DURATION_MINUTES=30
SECURITY_SESSION_TIMEOUT_MINUTES=480
SECURITY_CSRF_PROTECTION=true
SECURITY_RATE_LIMIT_PER_MINUTE=100
SECURITY_ENABLE_AUDIT_LOGGING=true
SECURITY_ENCRYPT_SENSITIVE_DATA=true
SECURITY_SECURE_COOKIES=true
SECURITY_SAMESITE_COOKIES=strict

# API Configuration
API_V1_PREFIX=/api/v1
API_DOCS_URL=/docs
API_REDOC_URL=/redoc
API_OPENAPI_URL=/openapi.json
API_TITLE=WakeDock API
API_DESCRIPTION=Container Orchestration Platform API
API_VERSION=1.0.0
API_CONTACT_NAME=WakeDock Team
API_CONTACT_EMAIL=support@wakedock.com
API_LICENSE_NAME=MIT
API_LICENSE_URL=https://opensource.org/licenses/MIT

# WebSocket Configuration
WEBSOCKET_ENABLED=true
WEBSOCKET_PATH=/ws
WEBSOCKET_HEARTBEAT_INTERVAL=30
WEBSOCKET_MAX_CONNECTIONS=1000
WEBSOCKET_BUFFER_SIZE=1024
WEBSOCKET_COMPRESSION=true
WEBSOCKET_PING_INTERVAL=30
WEBSOCKET_PING_TIMEOUT=10

# Monitoring Configuration
MONITORING_ENABLED=true
MONITORING_INTERVAL=10
MONITORING_RETENTION_DAYS=30
MONITORING_METRICS_ENDPOINT=/metrics
MONITORING_HEALTH_ENDPOINT=/health
MONITORING_PROMETHEUS_ENABLED=true
MONITORING_GRAFANA_ENABLED=true
MONITORING_ALERTING_ENABLED=true
MONITORING_SLACK_WEBHOOK_URL=
MONITORING_EMAIL_ALERTS=true
MONITORING_SMS_ALERTS=false

# Logging Configuration
LOGGING_LEVEL=INFO
LOGGING_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOGGING_DATE_FORMAT=%Y-%m-%d %H:%M:%S
LOGGING_FILE_PATH=/var/log/wakedock/wakedock.log
LOGGING_MAX_FILE_SIZE=10MB
LOGGING_BACKUP_COUNT=5
LOGGING_ROTATE_WHEN=midnight
LOGGING_ROTATE_INTERVAL=1
LOGGING_CONSOLE_ENABLED=true
LOGGING_FILE_ENABLED=true
LOGGING_SYSLOG_ENABLED=false
LOGGING_JSON_FORMAT=false

# File Upload Configuration
UPLOAD_MAX_FILE_SIZE=100MB
UPLOAD_ALLOWED_EXTENSIONS=.yml,.yaml,.json,.tar,.gz,.zip,.dockerfile
UPLOAD_TEMP_DIR=/tmp/wakedock-uploads
UPLOAD_SCAN_FOR_VIRUSES=false
UPLOAD_QUARANTINE_SUSPICIOUS=true
UPLOAD_CLEANUP_INTERVAL=3600

# Email Configuration
EMAIL_ENABLED=false
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USERNAME=
EMAIL_SMTP_PASSWORD=
EMAIL_FROM_ADDRESS=noreply@wakedock.com
EMAIL_FROM_NAME=WakeDock Platform
EMAIL_USE_TLS=true
EMAIL_USE_SSL=false
EMAIL_TIMEOUT=30

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=daily
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/var/backups/wakedock
BACKUP_COMPRESS=true
BACKUP_ENCRYPT=true
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key
BACKUP_REMOTE_ENABLED=false
BACKUP_REMOTE_TYPE=s3
BACKUP_REMOTE_BUCKET=wakedock-backups
BACKUP_REMOTE_ACCESS_KEY=
BACKUP_REMOTE_SECRET_KEY=
BACKUP_REMOTE_REGION=us-east-1

# Performance Configuration
PERFORMANCE_CACHE_ENABLED=true
PERFORMANCE_CACHE_TTL=300
PERFORMANCE_CACHE_MAX_ENTRIES=10000
PERFORMANCE_COMPRESSION_ENABLED=true
PERFORMANCE_COMPRESSION_LEVEL=6
PERFORMANCE_ASYNC_ENABLED=true
PERFORMANCE_WORKER_PROCESSES=4
PERFORMANCE_WORKER_THREADS=8
PERFORMANCE_MAX_REQUESTS_PER_WORKER=1000
PERFORMANCE_MEMORY_LIMIT=512MB
PERFORMANCE_CPU_LIMIT=80

# Feature Flags
FEATURE_SERVICE_WIZARD=true
FEATURE_COMPOSE_EDITOR=true
FEATURE_GITHUB_INTEGRATION=true
FEATURE_CONTAINER_ORCHESTRATION=true
FEATURE_REAL_TIME_MONITORING=true
FEATURE_NETWORK_MANAGEMENT=true
FEATURE_VOLUME_MANAGEMENT=true
FEATURE_IMAGE_MANAGEMENT=true
FEATURE_REGISTRY_INTEGRATION=true
FEATURE_BACKUP_RESTORE=true
FEATURE_AUDIT_LOGGING=true
FEATURE_RBAC=true
FEATURE_SSO=false
FEATURE_LDAP=false
FEATURE_2FA=false
FEATURE_API_RATE_LIMITING=true
FEATURE_WEBHOOK_NOTIFICATIONS=true
FEATURE_SLACK_INTEGRATION=false
FEATURE_TEAMS_INTEGRATION=false
FEATURE_DISCORD_INTEGRATION=false

# Development Settings (only for development environment)
DEV_RELOAD=false
DEV_MOCK_DOCKER=false
DEV_MOCK_GITHUB=false
DEV_MOCK_DATABASE=false
DEV_SEED_DATA=false
DEV_PROFILING=false
DEV_SQL_ECHO=false
DEV_CORS_ALLOW_ALL=false
DEV_SKIP_AUTH=false
DEV_GENERATE_SAMPLE_DATA=false

# Production Settings
PROD_PRELOAD_APP=true
PROD_WORKERS=4
PROD_WORKER_CLASS=uvicorn.workers.UvicornWorker
PROD_WORKER_TIMEOUT=30
PROD_KEEPALIVE=2
PROD_MAX_REQUESTS=1000
PROD_MAX_REQUESTS_JITTER=50
PROD_PRELOAD_TIMEOUT=30
PROD_GRACEFUL_TIMEOUT=30
PROD_ACCESS_LOG=true
PROD_ERROR_LOG=true
PROD_CAPTURE_OUTPUT=true
PROD_ENABLE_STDIO_INHERITANCE=true
